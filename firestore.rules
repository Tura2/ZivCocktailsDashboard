rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAllowed() {
      return request.auth != null
        && request.auth.token.email != null
        && exists(/databases/$(database)/documents/access/allowlist)
        && request.auth.token.email in get(/databases/$(database)/documents/access/allowlist).data.emails;
    }

    match /access/{docId} {
      allow read: if isAllowed();
      allow write: if false;
    }

    match /dashboard/{docId} {
      allow read: if isAllowed();
      allow write: if false;
    }

    match /snapshots/{docId} {
      allow read: if isAllowed();
      allow write: if false;
    }

    match /jobs/{docId} {
      allow read: if isAllowed();
      allow write: if false;
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
